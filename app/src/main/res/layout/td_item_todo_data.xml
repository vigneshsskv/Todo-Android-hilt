<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_todo_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-black"
        android:textColor="@color/purple_500"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_todo_description"
        app:layout_constraintEnd_toEndOf="@+id/tv_todo_status"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_todo_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_todo_category"
        tools:text="Breakfast" />

    <TextView
        android:id="@+id/tv_todo_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@+id/tv_todo_reminder_time"
        app:layout_constraintEnd_toEndOf="@+id/tv_todo_status"
        app:layout_constraintStart_toStartOf="@+id/tv_todo_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_todo_name"
        tools:text="Morning breakfast is good for health so take it on time on daily basic so you can be healthy." />

    <TextView
        android:id="@+id/tv_todo_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/purple_700"
        app:layout_constraintBottom_toTopOf="@+id/tv_todo_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_todo_status"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Health" />

    <TextView
        android:id="@+id/tv_todo_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:textAlignment="textEnd"
        android:textColor="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="@+id/tv_todo_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_todo_category"
        app:layout_constraintTop_toTopOf="@+id/tv_todo_category"
        tools:text="Yet to Start" />

    <TextView
        android:id="@+id/tv_todo_reminder_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/teal_700"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_todo_reminder_type"
        app:layout_constraintStart_toStartOf="@+id/tv_todo_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_todo_description"
        tools:text="10 hours to remind" />

    <TextView
        android:id="@+id/tv_todo_reminder_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_todo_reminder_time"
        app:layout_constraintEnd_toEndOf="@+id/tv_todo_description"
        app:layout_constraintStart_toEndOf="@+id/tv_todo_reminder_time"
        app:layout_constraintTop_toTopOf="@+id/tv_todo_reminder_time"
        tools:text="Remind me daily" />
</androidx.constraintlayout.widget.ConstraintLayout>